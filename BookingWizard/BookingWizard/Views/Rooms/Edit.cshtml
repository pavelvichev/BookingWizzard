@model BookingWizard.ModelsVM.hotelRoomVM

@{
	string photoPath ="";
	if (Model != null)
	{
		 photoPath = $"~/images/{Model.Image}";
	}
}
<form method="post" action="/Rooms/Edit" enctype="multipart/form-data">
	</div>
	<input type="hidden" asp-for="Id" />
	<input type="hidden" asp-for="HotelId" />
	<input type="hidden" asp-for="Image" />
	<div class="input-group mb-3">
		<input type="text" class="form-control" placeholder="@Model.Name" asp-for="Name" aria-describedby="basic-addon2">
		<span class="input-group-text" id="basic-addon2">Number</span>
	</div>
	<span asp-validation-for="Name"></span>
	<div class="input-group mb-3">
		<input type="text" class="form-control" placeholder="@Model.Description" asp-for="Description" aria-describedby="basic-addon2">
		<span class="input-group-text" id="basic-addon2"> Description</span>
	</div>
	<span asp-validation-for="Description"></span>
	<div class="input-group mb-3">
		<input type="text" class="form-control" placeholder="@Model.roomPricePerNight" asp-for="roomPricePerNight" aria-describedby="basic-addon2">
		<span class="input-group-text" id="basic-addon2"> Price per Night</span>
	</div>
	<span asp-validation-for="roomPricePerNight"></span>
	<div style="width: 200px; height: 200px;">
			<img class="card-img-top" alt="Hotel" imageThumbnail border border-primary" src="@Url.Content(photoPath)" asp-append-version="true">

			<div class="custom-file">
				<input asp-for="ImageModel.Image" class="custom-file-input form-control" />
				<label class="custom-file-label text-left"></label>
			</div>
		</div>
	</div>

	<button type="submit">Edit</button>
</form>