<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingWizard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingWizard.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-action="Hotels" asp-controller="Hotels">BookingWizard</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <span class="navbar-text fs-4">Найдем где жить!</span>
                </div>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">

                        </li>
                        <li class="nav-item">
                            <span class="nav-link">
                                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            @User.Claims.FirstOrDefault(x => x.Type == "name")?.Value
                                        </button>

                                        <ul class="dropdown-menu">
                                            <li>
                                                <form id="logoutForm" asp-controller="Auth" asp-action="LogOut" method="post">
                                                    <button type="submit" class="dropdown-item">Log Out</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <div class="btn-group">
                                        <a type="button" asp-controller="Auth" asp-action="LogIn" class="btn btn-primary" aria-expanded="false">Log in</a>
                                    </div>
                                }
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>


        function initAutocomplete() {
            const input = document.getElementById("autocomplete");
            const options = {
                fields: ["place_id", "geometry", "name"],
            };

            let autocomplete = new google.maps.places.Autocomplete(input, options);
        };
    </script>

    <script async
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC41-CXCuLxltWfEDjuVT4Kcc-K2Bd-gsk&libraries=places&callback=initAutocomplete">
    </script>
    @await RenderSectionAsync("Scripts", required: false)

    

</body>
</html>
