@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingWizard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingWizard.styles.css" asp-append-version="true" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
</head>
<body>
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-action="Hotels" asp-controller="Hotels">BookingWizard</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <span class="navbar-text fs-4">@Localizer["Slogan"]</span>
                </div>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <span class="nav-link">
                            <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                            @if (User.Identity.IsAuthenticated)
                            {
                                if (User.IsInRole("Owner"))
                                {
                                    <div class="btn-group">
                                        <a href="@Url.Action("MyHotels", "Admin", new { userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value })">
                                            <button type="submit" class="btn btn-light">@Localizer["MyHotels"]</button>
                                        </a>
                                    </div>
                                }
                            }
                        </span>
                        <li class="nav-item">
                            <div>
                                @await Html.PartialAsync("_SelectLanguagePartial")
                            </div>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link">
                                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                            @User.Claims.FirstOrDefault(x => x.Type == "name")?.Value
                                        </button>
                                        
                                        <ul class="dropdown-menu">
                                            <li>
                                                <form  asp-controller="Booking" asp-action="AllOrdersByUser" method="Get">
                                                    <button type="submit" class="dropdown-item">@Localizer["MyOrders"]</button>
                                                </form>
                                            </li>
                                            <li>
                                                <form id="logoutForm" asp-controller="Auth" asp-action="LogOut" method="post">
                                                    <button type="submit" class="dropdown-item">@Localizer["Logout"]</button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <div class="btn-group">
                                        <a type="button" asp-controller="Auth" asp-action="LogIn" class="btn btn-primary" aria-expanded="false">@Localizer["Login"]</a>
                                    </div>
                                }
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

   
    <div class="container" style="margin-top: 90px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Scripts/initAutocomplete.js"></script>
    <script src="~/Scripts/Delete.js?v=2.1"></script>
    <script src="~/Scripts/initMap.js?v=2.1"></script>
    <script src="~/Scripts/initMap.js?v=2.1"></script>
    <script src="~/Scripts/TimeExpired.js?v=2.1"></script>
    <script src="~/Scripts/EditReview.js?v=2.1"></script>
    <script src="~/Scripts/ValidationPrivileges.js?v=2.1"></script>
    

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC41-CXCuLxltWfEDjuVT4Kcc-K2Bd-gsk&callback=initialize&libraries=places,geometry&v=weekly" defer></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
