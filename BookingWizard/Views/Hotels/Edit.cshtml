@using System.Security.Claims;
@using BookingWizard.ModelsVM.Hotels;
@model HotelVM
@{

	Model.IdentityUserId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}

<form method="post">
	<input type="hidden" asp-for="Address.HotelId">
	<input type="hidden" asp-for="AddressId">
	<input type="hidden" asp-for="Image">
	<input type="hidden" asp-for="ImageModelList">
	<input type="hidden" asp-for="IdentityUserId" />
	<div>
		<div class="input-group mb-3">
			<input type="text" class="form-control" asp-for="HotelName" aria-describedby="basic-addon2">
			<span class="input-group-text" id="basic-addon2">@Localizer["HotelName"]</span>
			<span asp-validation-for="HotelName"></span>
		</div>
		<span asp-validation-for="HotelName"style="color: red;" class="text-danger"></span>
		<div class="input-group mb-3">
			<input type="text" class="form-control" asp-for="HotelShortDescription" aria-describedby="basic-addon2">
			<span class="input-group-text" id="basic-addon2">@Localizer["ShortDesc"]</span>
		</div>
		<span asp-validation-for="HotelShortDescription" style="color: red;" class="text-danger"></span>
		<div class="input-group mb-3">
			<input type="text" class="form-control" asp-for="HotelLongDescription" aria-describedby="basic-addon2">
			<span class="input-group-text" id="basic-addon2">@Localizer["LongDesc"]</span>
		</div>
		<span asp-validation-for="HotelLongDescription" style="color: red;" class="text-danger"></span>
		
		<div class="input-group mb-3">
			<input type="text" id="autocomplete" class="form-control" asp-for="@Model.Address.AddressName" aria-describedby="basic-addon2">
			<input type="hidden" id="Lat" asp-for="@Model.Address.Lat" name="Lat"/>
			<input type="hidden" id="Lng" asp-for="@Model.Address.Lng" name="Lng"/>
			<span class="input-group-text" id="basic-addon2">@Localizer["Address"]</span>
		</div>
		<span asp-validation-for="Address.AddressName" style="color: red;" class="text-danger"></span>

	</div>
	<button type="submit" class="alert alert-primary">@Localizer["EditHotel"]</button>
</form>

